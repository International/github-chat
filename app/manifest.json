{
  "name": "github-chat",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Chat within GitHub",
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "permissions": ["https://github.com/*"],
  "content_security_policy": "script-src 'self' https://*.tlk.io; child-src 'self' https://*.tlk.io; object-src 'self'"
}